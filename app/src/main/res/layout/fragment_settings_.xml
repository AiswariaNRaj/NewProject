<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Settings_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/fragment_settings_ll_equalizer"
        android:layout_width="match_parent"
        android:background="@drawable/grad_frag_settings"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/fragment_settings_tv_equalizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/Text2"
            android:layout_marginTop="10dp"
            android:text="Equalizer"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_settings_ll_volume"
        android:layout_width="360dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/grad_frag_settings"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/fragmwnt_settings_tv_volume"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Text2"
            android:layout_height="wrap_content"
            android:text="Volume"></TextView>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_settings_btn_voldec"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="-"
        android:background="@drawable/grad_frag_settings"
        android:layout_marginLeft="366dp"
        android:layout_marginTop="40dp"></Button>

    <TextView
        android:id="@+id/fragment_settings_tv_volumestatus"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginLeft="460dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/grad_frag_settings"
        android:gravity="center"
        android:text=""></TextView>

    <Button
        android:id="@+id/fragment_settings_btn_volinc"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="+"
        android:background="@drawable/grad_frag_settings"
        android:layout_marginLeft="555dp"
        android:layout_marginTop="40dp"></Button>

    <LinearLayout
        android:id="@+id/fragment_settings_ll_mute"
        android:layout_width="360dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/grad_frag_settings"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/fragmwnt_settings_tv_mute"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Text2"
            android:layout_height="wrap_content"
            android:text="Mute"></TextView>

    </LinearLayout>

    <Button
        android:id="@+id/fragment_settings_btn_mute"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text=""
        android:background="@drawable/grad_frag_settings"
        android:layout_marginLeft="366dp"
        android:layout_marginTop="80dp"></Button>

</FrameLayout>